general {
    colors = true
    interval = 2 # Diminuído para 2s para o uso de CPU ser mais responsivo
    color_good = "#a3be8c"
    color_degraded = "#ebcb8b"
    color_bad = "#bf616a"
}

order += "cpu_usage"
order += "memory"
order += "disk /"
order += "battery all"
order += "volume master"
order += "tztime local"

# CPU - Adicionado símbolo e limitador de casas decimais
cpu_usage {
    format = " %usage"
    degraded_threshold = 70
    max_threshold = 90
}

# MEMÓRIA - Simplificado para ser mais direto ao ponto
memory {
    format = " %used" # Mostra apenas o que você está usando
    threshold_degraded = "10%"
    format_degraded = " MEM LOW: %free "
}

# DISCO - Mostra o espaço livre com ícone
disk "/" {
    format = "󰋊 %avail"
}

# BATERIA - Adicionado status para saber se está carregando ou descarregando
battery all {
    format = " %status %percentage %remaining "
    format_down = "󱉝"
    status_chr = "󰂄"
    status_bat = "󰂂"
    status_unk = "󱉝"
    status_full = "󱟢"
    low_threshold = 20
    threshold_type = percentage
}

# HORA - Corrigido (você tinha duas linhas 'format', a segunda sobrescrevia a primeira)
tztime local {
    format = " %d/%m  󰥔 %H:%M "
}

volume master {
        format = "󰕾: %volume"
        format_muted = "󰖁: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
